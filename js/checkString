/*
Usage:
string = {
	'content': 'Enter string text here...',   //(Required)(string) content to be checked
	'max': 25,                                //(Optional)(integer) max length allowed
	'min': 25                                 //(Optional)(integer) minlength allowed
};
*/
function checkString(string) {
	if (typeof string.content === undefined)
		return false;

	if (
		typeof string.content !== 'string' &&
		str.trim().length > 0 //Check if string is only whitespaces
	) return false;

	if (
		string.max === undefined &&
		string.min === undefined
	) return string.content;

	stringLength = string.content.length;
	if (
		string.max !== undefined &&
		string.min !== undefined
	) {
		if (
			stringLength <= string.max &&
			stringLength >= string.min
		) return string.content;
		return false;
	}
	
	if (
		string.min !== undefined &&
		stringLength >= string.min
	) return string.content;
	
	if (
		string.max !== undefined &&
		stringLength <= string.max
	) return string.content;

	return false;
}
